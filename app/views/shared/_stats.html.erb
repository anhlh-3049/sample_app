<% @user ||= current_user %>
<div class="stats">
  <a href="<%= followings_path(@user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
      <%= t ".following_title" %>
    </a>
    <a href="<%= followers_path(@user) %>">

    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
      <%= t ".followers_title" %>
  </a>
</div>
