<% provide :title, t(".provide_title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
      <div class="col-md-8">
        <h3><%= t ".post_title" %></h3>
        <%= render "shared/feed" %>
      </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".title" %></h1>
    <p>
      <%= t ".service_html_first" %>
      <%= link_to t(".rails_href"), Settings.static_pages.home.herf %>
      <%= t ".service_html_last" %>
    </p>
    <h1><%= t ".welcome" %></h1>
    <h2>
      <%= t ".service_html_first" %>
      <%= link_to t(".rails_href"), Settings.static_pages.home.herf %>
      <%= t ".service_html_last" %>
    </h2>
    <%= link_to t(".button_title"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
